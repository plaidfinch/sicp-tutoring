{
  "model": "opus",
  "permissions": {
    "defaultMode": "dontAsk",
    "ask": [
      "Edit(.claude/**)",
      "Write(.claude/**)",
      "Edit(scripts/**)",
      "Write(scripts/**)"
    ],
    "deny": [
      "Edit(work/**)",
      "Write(work/**)",
      "Edit(book/**)",
      "Write(book/**)",
      "Bash(echo:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(git push:*)",
      "Bash(git config:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "allow": [
      "WebFetch(domain:docs.racket-lang.org)",
      "Skill(sicp-tutor)",
      "Edit(.tutor/**)",
      "Write(.tutor/**)",
      "Bash(racket:*)",
      "Bash(git -C .tutor add:*)",
      "Bash(git -C .tutor commit:*)",
      "Bash(git -C .tutor status:*)",
      "Bash(git -C .tutor log:*)",
      "Bash(git -C .tutor diff:*)",
      "Bash(rm:.setup-markers/tutor-verify-book)",
      "Bash(rm:.setup-markers/book-processed)",
      "Bash(rm:.setup-markers/mit-fetched)",
      "Bash(git submodule update:*)",
      "Bash(./scripts/setup.sh:*)",
      "Bash(./scripts/process-book.sh:*)",
      "Bash(command -v:*)",
      "Bash(raco pkg install:*)",
      "Bash(ls:*)",
      "Bash(test:*)"
    ]
  }
}
