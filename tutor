#!/bin/bash
cd "$(dirname "$0")"

# Check if claude is installed
if ! command -v claude &> /dev/null; then
    echo "Claude Code CLI is not installed."
    echo ""

    read -p "Install Claude Code? [Y/n] " response
    response=${response:-Y}
    if [[ "$response" =~ ^[Yy]$ ]]; then
        echo "Installing Claude Code..."
        curl -fsSL https://claude.ai/install.sh | sh
        if [ $? -ne 0 ]; then
            echo "Installation failed. Visit https://docs.anthropic.com/en/docs/claude-code"
            exit 1
        fi
    else
        echo "Please install Claude Code manually:"
        echo "  curl -fsSL https://claude.ai/install.sh | sh"
        echo ""
        echo "Or visit: https://docs.anthropic.com/en/docs/claude-code"
        exit 1
    fi
fi

claude "Î»"
